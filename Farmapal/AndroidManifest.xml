    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.farmapal.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.farmapal.ListaCompletaActivity"
            android:label="@string/title_activity_lista_completa" >
        </activity>
        <activity
            android:name="com.farmapal.MiePrescrizioniActivity"
            android:label="@string/title_activity_mie_prescrizioni" >
        </activity>
        <activity
            android:name="com.farmapal.NuovaPrescrizioneActivity"
            android:label="@string/title_activity_nuova_prescrizione" >
        </activity>
    </application>

</manifest>
