<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.farmapal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name="com.farmapal.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.farmapal.ListaCompletaActivity"
            android:label="@string/title_activity_lista_completa" >
        </activity>
        <activity
            android:name="com.farmapal.MiePrescrizioniActivity"
            android:label="@string/title_activity_mie_prescrizioni" >
        </activity>
        <activity
            android:name="com.farmapal.NuovaPrescrizioneActivity"
            android:label="@string/title_activity_nuova_prescrizione" >
        </activity>
        <activity
            android:name="com.farmapal.ListaCompletaForResultActivity"
            android:label="@string/title_activity_lista_completa_for_result" >
        </activity>
        <activity
            android:name="com.farmapal.ListaFarmacie"
            android:label="@string/title_activity_lista_farmacie" >
        </activity>
        <activity
            android:name="com.farmapal.DescrizioneFarmaciaActivity"
            android:label="@string/title_activity_descrizione_farmacia_dialog" >
        </activity>
        <activity
            android:name="com.farmapal.service.ConfermaAssunzioneDialog"
            android:label="@string/title_activity_conferma_assunzione_dialog" android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name="com.farmapal.DettaglioPrescrizioneActivity"
            android:label="@string/title_activity_dettaglio_prescrizione" >
        </activity>
        <activity
            android:name="com.farmapal.SelezioneGiorniActivity"
            android:label="@string/title_activity_selezione_giorni" >
        </activity>
        <activity
            android:name="com.farmapal.DettaglioFarmacoActivity"
            android:label="@string/title_activity_dettaglio_farmaco" >
        </activity>
        <activity
            android:name="com.farmapal.ModificaPrescrizioneActivity"
            android:label="@string/title_activity_modifica_prescrizione" >
        </activity>
        <activity
            android:name="com.farmapal.NuovoFarmacoActivity"
            android:label="@string/title_activity_nuovo_farmaco" >
        </activity>
        <service android:name=".service.NotificaAssunzione"></service>
    </application>

</manifest>
